{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Configure CMake",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S",
				".",
				"-B",
				"build",
				"-G",
				"Visual Studio 17 2022"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": []
		},
		{
			"label": "Build Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Release"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Debug"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "Run Sandbox",
			"type": "shell",
			"command": ".\\build\\bin\\Release\\PhysicsDemo.exe",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run SpritesheetAnalysisTests",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build_clean",
				"--config",
				"Release",
				"--target",
				"SpritesheetAnalysisTests"
			],
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Build Debug Log",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Debug",
				"--",
				"/fileLogger",
				"/flp:logfile=build\\\\msbuild.log"
			],
			"group": "build"
		}
	]
}