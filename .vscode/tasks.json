{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Configure CMake",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--preset",
				"msvc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": []
		},
		{
			"label": "Build Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"--preset",
				"msvc-release"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"--preset",
				"msvc-debug"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "Run Sandbox",
			"type": "shell",
			"command": ".\\build\\msvc\\bin\\Release\\PhysicsDemo.exe",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run SpritesheetAnalysisTests",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"--preset",
				"msvc-release",
				"--target",
				"SpritesheetAnalysisTests"
			],
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Run Unit Tests (Debug)",
			"type": "shell",
			"command": ".\\build\\msvc\\bin\\Debug\\SAGE_Tests.exe",
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"problemMatcher": [],
			"dependsOn": [
				"Build Debug"
			]
		},
		{
			"label": "Run Unit Tests (Release)",
			"type": "shell",
			"command": ".\\build\\msvc\\bin\\Release\\SAGE_Tests.exe",
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"problemMatcher": [],
			"dependsOn": [
				"Build Release"
			]
		},
		{
			"label": "Build Debug Log",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"--preset",
				"msvc-debug",
				"--",
				"/fileLogger",
				"/flp:logfile=build\\\\msbuild.log"
			],
			"group": "build"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"label": "Run Physics Demo",
			"type": "shell",
			"command": "powershell",
			"args": [
				". \\build\\msvc\\bin\\Release\\PhysicsDemo.exe"
			],
			"group": "test"
		}
	]
}