@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(OpenGL REQUIRED)

# GLFW and GLAD are bundled with SAGE
set(GLFW3_INCLUDE_DIR "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@")
set(GLAD_INCLUDE_DIR "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@")

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/SAGETargets.cmake")

# Provide SAGE_FOUND variable
check_required_components(SAGE)

# Print info message
if(SAGE_FOUND)
    message(STATUS "SAGE Engine found (version @PROJECT_VERSION@)")
    message(STATUS "SAGE Engine include dir: @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@")
endif()
